pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'ecommerce-java'
        DOCKER_TAG = 'latest'
        REGISTRY = 'docker.io'
        REPO = 'chakriamajaladocker'  // replace with DockerHub username
    }

    stages {
    stage('Checkout') {
    steps {
        git branch: 'main', url: 'https://github.com/ChakriAmajala/e-commerce-web-site.git'
    }
}
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $REGISTRY/$REPO/$DOCKER_IMAGE:$DOCKER_TAG .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub4', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                    sh 'docker push $REGISTRY/$REPO/$DOCKER_IMAGE:$DOCKER_TAG'
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker stop ecommerce-container || true'
                sh 'docker rm ecommerce-container || true'
                sh 'docker run -d --name ecommerce-container -p 8002:8080 $REGISTRY/$REPO/$DOCKER_IMAGE:$DOCKER_TAG'
            }
        }
    }

    post {
        success { echo 'Java E-commerce app built, pushed, and deployed successfully!' }
        failure { echo 'Build failed.' }
    }
}
