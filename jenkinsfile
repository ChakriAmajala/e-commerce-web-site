pipeline {
    agent any

    environment {
        REPO = "chakriamajalahub/e-commerce-web-site-frontend"
        TAG = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t $REPO:$TAG ."
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push $REPO:$TAG
                    """
                }
            }
        }

        stage('Run Container') {
            steps {
                sh """
                    docker stop ecommerce || true
                    docker rm ecommerce || true
                    docker pull $REPO:$TAG
                    docker run -d -p 9091:80 --name ecommerce $REPO:$TAG
                """
            }
        }
    }

    post {
        success {
            echo "üöÄ Site running at: http://<SERVER_IP>:9091"
        }
        failure {
            echo "‚ùå Build/Deploy failed. Check logs!"
        }
    }
}

