pipeline {
    agent any

    environment {
        IMAGE_NAME = "ecommerce-frontend"
        TAG = "${env.BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t $IMAGE_NAME:$TAG ."
            }
        }

        stage('Run Container') {
            steps {
                echo "Stopping old container if exists..."
                sh "docker stop ecommerce || true"
                sh "docker rm ecommerce || true"

                echo "Running container..."
                sh "docker run -d --name ecommerce -p 9095:80 $IMAGE_NAME:$TAG"
                sh "docker ps -a"
            }
        }
    }
}
